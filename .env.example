# =============================================================================
# AFFILIATE FACTORY - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
# The name of your site/brand
NEXT_PUBLIC_SITE_NAME=Affiliate Factory

# Primary domain for your application (used for tenant routing)
NEXT_PUBLIC_DEFAULT_DOMAIN=example.com

# Environment: development, staging, production
NODE_ENV=development

# Base URL for your application (used for absolute URLs and redirects)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# SUPABASE CONFIGURATION (HEADLESS CMS & DATABASE)
# =============================================================================
# Supabase project URL (found in project settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key (safe for client-side use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT secret for Supabase auth (found in project settings > API)
SUPABASE_JWT_SECRET=your-jwt-secret

# Supabase storage bucket name for media uploads
SUPABASE_STORAGE_BUCKET=media

# =============================================================================
# AI/ML SERVICES
# =============================================================================
# OpenAI API key for content generation and embeddings
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API key for Claude models (optional alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =============================================================================
# EMBEDDINGS CONFIGURATION
# =============================================================================
# OpenAI model for embeddings (text-embedding-3-small recommended for cost efficiency)
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDINGS_MODEL=text-embedding-3-small

# =============================================================================
# WEB SEARCH APIs
# =============================================================================
# Tavily API key for web search and research (recommended for real-time data)
TAVILY_API_KEY=tvly-your-tavily-api-key

# Alternative: SerpAPI key for Google search results
SERPAPI_API_KEY=your-serpapi-key

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# Resend API key for transactional emails and newsletters
RESEND_API_KEY=re_your-resend-api-key

# From email address for system emails
EMAIL_FROM=noreply@example.com

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics 4 measurement ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# AMAZON ASSOCIATES API (PA-API v5)
# =============================================================================
# Amazon Product Advertising API access key
AMAZON_PA_API_ACCESS_KEY=your-amazon-access-key

# Amazon Product Advertising API secret key
AMAZON_PA_API_SECRET_KEY=your-amazon-secret-key

# Amazon Associates tag (affiliate ID) - using provided tag
AMAZON_PA_API_PARTNER_TAG=jmpkc01-20

# Amazon partner type (always "Associates" for affiliate program)
AMAZON_PA_API_PARTNER_TYPE=Associates

# Amazon marketplace locale (US, UK, CA, DE, FR, IT, ES, JP, IN, etc.)
AMAZON_PA_API_LOCALE=US

# Amazon marketplace hostname (webservices.amazon.com for US)
AMAZON_MARKETPLACE=webservices.amazon.com

# =============================================================================
# OPTIONAL AFFILIATE PROGRAMS
# =============================================================================
# Walmart Affiliate Program
WALMART_PARTNER_ID=your-walmart-partner-id
WALMART_API_KEY=your-walmart-api-key

# Target Affiliate Program
TARGET_PARTNER_ID=your-target-partner-id
TARGET_API_KEY=your-target-api-key

# Best Buy Affiliate Program
BESTBUY_API_KEY=your-bestbuy-api-key
BESTBUY_AFFILIATE_ID=your-bestbuy-affiliate-id

# =============================================================================
# REDDIT API (READ-ONLY ACCESS)
# =============================================================================
# Reddit application client ID (create app at reddit.com/prefs/apps)
REDDIT_APP_ID=your-reddit-client-id

# Reddit application client secret
REDDIT_APP_SECRET=your-reddit-client-secret

# Reddit user agent (format: platform:app_id:version by /u/username)
REDDIT_USER_AGENT=web:affiliate-factory:1.0.0 by /u/yourusername

# =============================================================================
# WEBHOOKS (Make.com Integration)
# =============================================================================
# Make.com webhook secrets for different automation workflows
MAKE_BLOG_WEBHOOK_SECRET=your-blog-webhook-secret
MAKE_PRODUCT_WEBHOOK_SECRET=your-product-webhook-secret
MAKE_IMAGE_WEBHOOK_SECRET=your-image-webhook-secret

# Make.com webhook URLs (optional, can be configured in Make.com directly)
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/your-webhook-id

# =============================================================================
# QUEUE SERVICE (UPSTASH REDIS - OPTIONAL)
# =============================================================================
# Upstash Redis REST URL for queue management (recommended for production)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io

# Upstash Redis REST token
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# TENANT BOOTSTRAP DEFAULTS
# =============================================================================
# Default tenant slug for development
DEFAULT_TENANT_SLUG=nectarheat

# Default tenant domain for development
DEFAULT_TENANT_DOMAIN=nectarheat.com

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logflare API key for log aggregation (optional)
LOGFLARE_API_KEY=your-logflare-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable optional ad manager functionality
ENABLE_OPTIONAL_AD_MANAGER=false

# Enable debug logging (true/false)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Secret key for signing cookies and sessions (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-key

# Rate limiting settings
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache TTL in seconds for API responses
CACHE_TTL=3600

# Enable/disable caching (true/false)
ENABLE_CACHING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Disable telemetry for Next.js (optional)
NEXT_TELEMETRY_DISABLED=1

# Enable verbose logging for development
VERBOSE_LOGGING=false
