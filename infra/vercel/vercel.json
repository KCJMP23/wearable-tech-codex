{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm install && pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "api/chat.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    { "path": "/api/cron/hourly", "schedule": "0 * * * *" },
    { "path": "/api/cron/nightly", "schedule": "0 3 * * *" }
  ]
}
