{
  "name": "@affiliate-factory/blockchain",
  "version": "1.0.0",
  "description": "Blockchain integration package for affiliate attribution and commission distribution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "deploy:ethereum": "hardhat run scripts/deploy.ts --network ethereum",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:ethereum": "hardhat verify --network ethereum"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "ethers": "^6.8.0",
    "viem": "^1.15.1",
    "wagmi": "^1.4.6",
    "@wagmi/core": "^1.4.6",
    "@walletconnect/web3wallet": "^1.8.8",
    "abitype": "^0.9.8"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.8.0",
    "hardhat": "^2.17.4",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "contracts",
    "typechain-types"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}