{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@affiliate-factory/ui": ["./packages/ui/src"],
      "@affiliate-factory/content": ["./packages/content"],
      "@affiliate-factory/sdk": ["./packages/sdk/src"],
      "@affiliate-factory/sdk/*": ["./packages/sdk/src/*"],
      "@affiliate-factory/types": ["./packages/sdk/src/types"],
      "@affiliate-factory/components/*": ["./packages/ui/src/components/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "build"]
}
